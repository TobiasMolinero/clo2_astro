---
import telefono from '../../assets/telefono.jpg';
import icono from '../../assets/icono-telefono.png';
---

<section id="contacto" class="bg-[var(--verde)] max-[480px]:px-[20px] flex">
    <div class="lg:w-[50%] xl:w-[50%] lg:px-[100px] xl:px-[100px] 2xl:px-[100px] py-[50px]">
        <h2 class="font-[Poppins] font-[400] text-[35px] text-white">Contacto</h2>
        <div class="bg-white p-[40px] rounded-[15px] my-[50px] flex flex-col items-center gap-y-[20px] text-[var(--roboto)]">
            <img src={icono.src} alt="Icono de un telefono" class="h-[45px] w-[45px]">
            <p class="text-[18px]">Si buscas trabajar con nosotros no dudes en comunicarte, solo tenes que hacer click en el boton!</p>
            <a href="" class="bg-[var(--verde)] flex items-center justify-center gap-x-[10px] w-[100%] h-[50px] rounded-[15px] text-center text-white hover:text-[18px] hover:drop-shadow-[2px_2px_5px_#00000040] transition-[font-size_box-shadow] duration-[0.3s]"><i class="bi bi-whatsapp"></i>+54 9 3865 69-0287</a>  
        </div>
    </div>
    <div class="imagen lg:relative lg:w-[50%] xl:w-[50%]">
        <img src={telefono.src} alt="Imagen de un telefono" class="h-[100%] w-[100%] object-cover">
        <div class="absolute top-0 h-[100%] w-[100%] bg-[#00000060]"></div>
    </div>
</section>

<style>

    @media screen and (max-width: 1023px){
        #contacto{
            display: flex;
            flex-direction: column;
            padding: 50px 100px
        }

        #contacto h2{

        }

        #contacto .imagen{
            display: none;
        }
    }

    @media screen and (max-width: 480px){
        #contacto{
            padding: 50px 20px;
        }
    }
</style>