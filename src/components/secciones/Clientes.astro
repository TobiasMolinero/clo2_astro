---
import citromax from '/public/imagenes/citromax-logo.webp';
import blueberries from '/public/imagenes/blueberries-logo.webp';
import trapani from '/public/imagenes/trapani-logo.webp'
import kingberry from '/public/imagenes/kingberry-logo-2.svg';
import alif from '/public/imagenes/alif-logo.webp';
---

<section class="clientes">
    <div class="py-[50px] px-[100px] max-[480px]:p-[20px]">
        <h2 class="font-[Poppins] font-[400] text-[35px] text-[var(--verde)]">Empresas que conf√≠an en nuestro trabajo</h2>
        <div class="flex gap-[60px] justify-center flex-wrap p-2 my-[30px] max-[480px]:mt-[50px]">
            <div class="">
                <img src={citromax.src} alt="Logo de Citromax Argentina" class="h-[150px] w-[150px]">
            </div>
            <div class="">
                <img src={trapani.src} alt="Logo de Vicente Trapani" class="h-[150px] w-[150px]">
            </div>
            <div class="">
                <img src={blueberries.src} alt="Logo de Blueberries" class="h-[150px] w-[150px]">
            </div>
            <div class="">
                <img src={kingberry.src} alt="Logo de Kingberry" class="h-[150px] w-[150px]">
            </div>
            <div class="">
                <img src={alif.src} alt="Logo de Alif Agro" class="h-[150px] w-[150px]">
            </div>
        </div>
    </div>
</section>

