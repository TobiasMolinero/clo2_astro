---
import citromax from '../assets/citromax.jpg';
import fabrica from '../assets/fabrica.png';
import blueberries from '../assets/logoblueberries2.jpg';
---

<section class="clientes">
    <div class="py-[50px] px-[100px]">
        <h2 class="font-[Poppins] font-[400] text-[35px] text-[var(--verde)]">Empresas que conf√≠an en nuestro trabajo</h2>
        <div class="flex gap-[60px] justify-center flex-wrap p-2 my-[100px]">
            <div class="">
                <img src={citromax.src} alt="Citromax Argentina" class="h-[150px] w-[150px]">
            </div>
            <div class="flex flex-col gap-y-[5px]">
                <img src={fabrica.src} alt="Calcerano" class="h-[150px] w-[150px] bg-white">
                <h4 class="font-[Poppins] font-[500] text-[18px] text-center text-[]">Calcerano</h4>
            </div>
            <div class="flex flex-col gap-y-[5px]">
                <img src={fabrica.src} alt="Vicente Trapani" class="h-[150px] w-[150px] bg-white">
                <h4 class="font-[Poppins] font-[500] text-[18px] text-center text-[]">Vicente Trapani</h4>
            </div>
            <div class="flex flex-col gap-y-[5px]">
                <img src={fabrica.src} alt="Ingenio Trinidad" class="h-[150px] w-[150px] bg-white">
                <h4 class="font-[Poppins] font-[500] text-[18px] text-center text-[]">Ingenio Trinidad</h4>
            </div>
            <div class="">
                <img src={blueberries.src} alt="Blueberries" class="h-[100px] w-[220px]">
            </div>
        </div>
    </div>
</section>

